#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)
require 'swamp'

fields = Swamp::Fields.new
buttons = Swamp::Buttons.new
input_buttons = Swamp::InputButtons.new
select_boxes = Swamp::SelectBoxes.new
wrapper = Swamp::Wrapper.new(fields, buttons, input_buttons, select_boxes)
swamp = Swamp::Interface.new(STDOUT, wrapper)
swamp.run

while input = gets
  if input.chomp == 'exit'
    exit
  end
  swamp.scan(input)
end
